{
  "git": {
    "changelog": "git log --pretty=format:\"* %s (%h)\" ${from}...${to}",
    "commit": true,
    "commitMessage": "Release ${version}",
    "push": true,
    "pushArgs": [
      "--follow-tags"
    ],
    "pushRepo": "origin",
    "requireCleanWorkingDir": false,
    "requireCommits": true,
    "tag": true,
    "tagAnnotation": "Release ${version}"
  },
  "github": {
    "release": true,
    "releaseName": "Release ${version}"
  },
  "hooks": {},
  "npm": {
    "publish": false
  }
}